<% provide(:title, "All Users") %>

<p id="notice"><%= notice %></p>

<%= will_paginate %>

<h1>Users</h1>
<% if logged_in? %>
  <%= link_to "Profile", current_user %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'View all microposts', microposts_path %>
<br>
<%= link_to 'New User', signup_path %>
<br>
<% if logged_in? %>
  <%= link_to "Log out", logout_path, method: :delete %>
<% else %>
  <%= link_to 'Login', login_path %>
<% end %>
